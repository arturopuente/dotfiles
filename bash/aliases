alias l="ls -lah"
alias ..="cd .."
alias cda="cd ~/dev/apps"
alias cdd="cd ~/Downloads"

alias reload="source ~/dev/dotfiles/bash/aliases"
alias epath="mate ~/dev/dotfiles/bash/env && reload"
alias ealias="mate ~/dev/dotfiles/bash/aliases && reload"

function take {
  mkdir $1
  cd $1
}

function extract {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)  tar xjf $1      ;;
      *.tar.gz)   tar xzf $1      ;;
      *.bz2)      bunzip2 $1      ;;
      *.rar)      rar x $1        ;;
      *.gz)       gunzip $1       ;;
      *.tar)      tar xf $1       ;;
      *.tbz2)     tar xjf $1      ;;
      *.tgz)      tar xzf $1      ;;
      *.zip)      unzip $1        ;;
      *.Z)        uncompress $1   ;;
      *)          echo "'$1' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

function jump {
  local si="$IFS";
  IFS=$'\n';
  local newDir=$(JUMPPROFILE=1 command jump "$@");
  cd "$newDir";
  IFS="$si";
}
alias j="jump -a"

# Ruby
alias b="bundle exec"
alias rage="bundle exec rake"
alias gemi="gem install --no-rdoc --no-ri"
alias irb="irb --simple-prompt"

# Postgres
alias pgst="postgres -D /usr/local/var/postgres"

# Trash
alias trash="mv $1 ~/.Trash"

# Git
alias gc="git commit -a -m $@"
alias cko="git checkout"
alias gs="git status"
alias gaa="git add ."

# Start Compass
alias cw="compass watch"

# Get your public IP address
alias ip="curl ifconfig.me"

# Show/hide hidden files in Finder
alias showfinder="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hidefinder="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

