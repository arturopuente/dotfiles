[user]
	name = Arturo Puente
  email = arturopuentevc@gmail.com

[github]
  user = arturopuente

[alias] 
  browse = !hub browse
  w      = !hub browse
  compare = !hub compare
  c = commit -am
  ci = commit
  cm = commit -m
  amend = commit --amend  
  a = add
  aa = add -A
  squash = rebase --interactive
  co = checkout
  st = status
  ll = log --pretty=oneline --abbrev-commit --max-count=15
  ps = push
  pl = pull
  plre = pull --rebase
  pick = cherry-pick
  br = branch
  df = diff
  spull = !git-svn fetch && git-svn rebase
  spush = !git-svn dcommit
  safe-merge = merge --no-commit --no-ff
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; subl `f`"
  add-unmerged  = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"

[core]
  excludesfile = ~/.gitignore
  pager = less
  logallrefupdates = true
  whitespace = space-before-tab, trailing-space
  editor = /usr/bin/vim

[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = yellow
  changed = green bold
  untracked = blue bold

[branch]
  autosetupmerge = true

[diff]
  renames = copies
  mnemonicprefix = true

[format]
  pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s

[difftool "Kaleidoscope"]
  cmd = "ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\""

[difftool]
  prompt = false

[diff]
  tool = Kaleidoscope